{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "FSHPAL",
	"patterns": [
		{
			"include": "#compiler-directive"
		},
		{
			"include": "#keyword-control"
		},
		{
			"include": "#keyword-io"
		},
		{
			"include": "#keyword-file"
		},
		{
			"include": "#built-in-functions"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#identifier"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"compiler-directive": {
			"name": "meta.preprocessor.BAS",
			"match": "%INCLUDE|%EQU|%LIST|%NOLIST|%CIF|%CENDIF|%CPRINT|(.+END\\.run)|lrun"
		},
		"keyword-control": {
			"patterns": [{
				"name": "keyword.control.BAS",
				"match": "GOSUB|POPGOS|RETURN|GOTO|IF|THEN|ELSE|FOR|POPFOR|NEXT|ON|END|EXIT|BR([0-9]{1}|10|11|12)$|SBR([0-9]{1}|10|11|12)$|GSBR([0-9]{1}|10|11|12)$|DELAY|uDELAY|RUN|ENTRY|GSRUN|GSRUNNSS|RETRUN|RETRUNNSR|CRETRUN|POPGSR|CHDIR|KOBR|KBRUN|KGSRUN|RUNSDIR|SECTIMEOUT|KARUN|PRGODESC$|EXECUTE|TEXECUTE|MOVE|REMOVE|ZEROMEM|DATEBOMB|GSFUNCT|GSFLOAD"
			}]
		},
		"keyword-io": {
			"patterns": [{
				"name": "keyword.operator.BAS",
				"match": "IN|PR|ODEV|DATA|READ|RESTORE|BLOCK|SCREEN|PTRLINE|DRAWBOX|SCROLLWIN|KEYFLUSH|SCRLINE|SRSCREEN|PRFILE|PRBIN|MDUMP"
			}]
		},
		"keyword-file": {
			"patterns": [{
				"name": "keyword.control.less.BAS",
				"match" : "CREATE|OPEN|SOPEN|CLOSE|RENAME|DELETE|EOF[0-7]|GET|PUT|GETSTR|PUTSTR|GETSEQ|PUTSEQ|GETBLK|PUTBLK|CLBUF|DATAPATH|MIRRORING|SEEK|MKDIR|SHRINKFILE|XMLWRITE|DBCREATE|INDEX|SEARCH|DBGET|DBPUT|DBDEL|FILE|TSFILE|IDXREG|(DATA FILE Header)"
			}]
		},
		"built-in-functions": {
			"patterns": [{
				"name": "entity.name.function.BAS",
				"match": "ABS\\(|ASC\\(|BIN1\\(|BIN2\\(|BIN2BIT\\(|BIN3\\(|BIN3N\\(|BIN4\\(|BIN5N\\(|BHNIB\\(|BLNIB\\(|CATCHALLFP\\(|CKSUM\\(|COMPMEM\\(|FLT1\\(|FLT2\\(|FLT2BIT\\(|FLT2U\\(|FLT3\\(|FLT3N\\(|FLT4\\(|FLT5N\\(|FLT5NU\\(|FHNIB\\(|FLNIB\\(|FRAC\\(|GCDIST\\(|GCHDG\\(|GCPLOT\\(|HDEC\\(|HPSTRWIDTH\\(|INT\\(|KBD\\(|RAWKBD\\(|LEN\\(|MATCH\\(|SMATCH\\(|RMATCH\\(|MFREE\\(|MOV1\\(|MOV2\\(|MOV3\\(|MOV4\\(|OPLINES\\(|PID|RANDOM|RBIT\\(|SBIT\\(|TBIT\\(|TESTSTR\\(|TIME|TIMEMS|GMTIME|GMTIMEMS|VAL\\(|WINDHDG\\(|WINDSPD\\(|CHR\\$\\(|CHR2\\$\\(|CLIENTVER\\$|COMLINVAR\\$\\(|FTIME\\$\\(|FTIMEMS\\$\\(|FTIME2\\$\\(|GETCURDIR\\$\\(|HEX\\$\\(|HPPARADJ\\$\\(|LEFTTS\\$\\(|LOGDIR\\$|MID\\$\\(|MIDDTS\\$\\(|MON\\$\\(|MONSTR\\$\\(|PARADJ\\$\\(|RANAMES\\$\\(|RIGHT\\$\\(|RIGHTLZ\\$\\(|RUNVER\\$|STR\\$\\(|TERMTYPES\\$|TMPDIR\\$|TTY\\$|OSTTY\\$|UCASE\\$\\(|FJDATE|BJDATE|BJSDATE\\$\\(|BJSDATE2\\$\\(|BJSDATE3\\$\\(|BJSDATE4\\$\\(|BJSDATE5\\$\\(|BJSDATE6\\$\\(|DATETIMESTR\\$\\(|FJSDATE\\$\\(|FJSDATE2\\$\\(|FJSDATE3\\$\\(|FJSDATE4\\$\\(|FJSDATE5\\$\\(|FJSDATE6\\$\\(|JWKDAY\\(|JWEEKDAY\\$\\(|FJREFDATE\\(|CVFJDATE\\(|FFJDATE\\(|FJSTRDATE\\(|FJSTRDATE3\\(|FJSTRDATETIME\\(|SOFF\\$|SHEAD\\$|BON\\$|NOR\\$|RBON\\$|REV\\$|HIOFF\\$|HION\\$|HILITE\\$|HILITE2\\$|LOLITE\\$|CHFONT\\$\\(|SCRCHANGED|CURSCOL|CURSLIN|SCREENSIZE|COLOR\\$\\(|ATTRIB|GETPALCOLOR|FKEYTEXT|POPUPWIN|DISPTEXTWIN|DISPIMAGEURL|DISPIMAGEFILE|MAXCOLUMN|SHADOWBOX|LISTBOX|MENUBOX|SCROLLBOX|JCBUTTON(CC|CA|GUI)|CLRBUTTON|DFREE\\(|DSIZE\\(|FDIR\\$\\(|FMDATE\\(|FMTIME\\(|FSTAT\\(|FSTAT2\\(|LOGDIR\\$|TMPDIR\\$|IFREE\\(|IDXREG\\(|FOUND|DBCOUNT\\(|LOCKED|OFFSET|TLOCK\\(|DBDSTAMP\\(|DBTTIME|DBTPROG\\$|DBTTERM\\$|DBTPLINE\\$|DBTPROGDESC\\$|COMINIT\\(|MODEMINIT\\(|DIAL\\(|XMITBLK\\(|RECVBLK\\(|HANGUP\\(|TESTCOM\\(|RECVCOM\\(|SENDCOM\\(|CLOSECOM\\(|TCPSERVER\\(|TCPCLIENT\\(|TCPREADTEST\\(|TCPWRITETEST\\(|TCPREAD\\(|TCPWRITE\\(|TCPCLOSE\\(|TCPCONNSTAT\\(|SIGSEND\\(|SIGSENDA\\(|SIGPAUSE\\(|SIGPAUSEA\\(|SMEMKEY|"
			}]
		},
		"strings": {
			"name": "string.quoted.double.BAS",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.BAS",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.BAS",
			"match": "\\d+"
		},
		"identifier": {
			"name": "variable.name.BAS",
			"pattern": "([a-zA-Z][a-zA-Z0-9\\.]*\\$?)"
		},
		"comments": {
			"name":"comment.line.BAS",
			"begin": "REM",
			"end": "$"
		}
		
	},
	"scopeName": "source.bas"
}